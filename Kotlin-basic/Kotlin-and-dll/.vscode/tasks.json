//Build cái nào thì comment cái còn lại


{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Kotlinc build active file",
            "type": "shell",
            "command": "kotlinc",
            "args": [
                "${workspaceFolder}/${fileBasenameNoExtension}.kt",
                "-include-runtime",
                "-d",
                "${fileDirname}/${fileBasenameNoExtension}.jar"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Compile Kotlin file to JAR"
        }
    ]
}



